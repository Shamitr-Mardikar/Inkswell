---
import { type CollectionEntry, getCollection } from 'astro:content'
import PostLayout from '@/layouts/PostLayout.astro'
import { render } from 'astro:content'

export async function getStaticPaths() {
  const blogs = await getCollection('blogs')

  const blogPaths = blogs.map((blog) => {
    const folderName = blog.id.split('/')[0]
    return {
      params: { slug: folderName },
      props: blog
    }
  })

  return blogPaths
}

type Props = CollectionEntry<'blogs'>

const post = Astro.props
const { Content, remarkPluginFrontmatter } = await render(post)

const readingTime = remarkPluginFrontmatter.readingTime
const toc = remarkPluginFrontmatter.toc || []
---

<PostLayout {...post.data} readingTime={readingTime} toc={toc}>
  <Content />
</PostLayout>
